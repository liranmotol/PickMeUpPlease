<!DOCTYPE html>
<html lang="en">
    <head>

        <link href="/Content/MergedStyles.css" rel="stylesheet" />
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>

        
        <meta name="viewport" content="minimal-ui, width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    
    </head>
    <body >
        <div class="loadingIcon" style="font-size: 52px;text-align: center;margin-top: 100px;">
            <i class="fa fa-circle-o-notch fa-spin"></i>
        </div>
        
        <div id="wrapperBody" style="opacity:0;transition:all .6s ease;">


            <div data-role="page" data-theme="b">
                <div data-role="header" style="position:fixed;top:0px;width:100%;z-index:5">
                    @if (IsSectionDefined("Header"))
                    {
                        @RenderSection("Header")
                    }
                    else
                    {
                        <h1>@ViewBag.Title</h1>
                        <a data-role="button" data-rel="back" data-icon="back">Back</a>
                        <a data-role="button" data-rel="back" data-icon="home">Home</a>
                         @*@Html.ActionLink("Home", "Index", "Home", new { UserName = Session["UserName"] }, new { data_icon = "home", data_rel = "home" })*@
                        //@Html.Partial("_LoginPartial")
                    }
                </div>
                <div data-role="content" style="margin-top:15px">
                    @RenderBody()
                </div>
            </div>
        </div>
      
        <script>
            $(document).on("mobileinit", function () {
                $.mobile.ajaxEnabled = false;
            });
        </script>
        @Scripts.Render("~/bundles/jquerymobile")
        @RenderSection("scripts", required: false)

        <script>
            $(function () {
                $('#wrapperBody').css('opacity', '1');
                $('.loadingIcon').css('display', 'none');
                
            });

        
        </script>
    </body>
</html>
